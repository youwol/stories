{
    "name": "@youwol/stories",
    "version": "0.1.4-wip",
    "description": "YouWol Stories application",
    "author": "greinisch@youwol.com",
    "main": "dist/index.html",
    "scripts": {
        "build": "yarn build:dev",
        "build:dev": "del-cli dist && webpack --mode development",
        "build:prod": "del-cli dist && webpack --mode production",
        "test": "jest -c ./jest.config.js --rootDir . -i",
        "test-coverage": "jest -c ./jest.config.js --rootDir . -i --collect-coverage --collectCoverageFrom=./src/app/**/*.ts ",
        "doc": "typedoc",
        "start": "webpack serve",
        "upgrade-youwol": "yarn upgrade @youwol/cdn-client @youwol/flux-core @youwol/flux-view",
        "publish-npm-public": "yarn build:prod && yarn publish --access public"
    },
    "license": "MIT",
    "dependencies": {
        "@youwol/http-clients": ">=0.1.12 <1",
        "@youwol/cdn-client": ">=0.1.4 <1",
        "@youwol/flux-view": ">=0.1.1 <1",
        "@youwol/os-core": ">=0.0.2 <1",
        "@youwol/os-top-banner": ">=0.0.1 <1",
        "@youwol/fv-button": ">=0.0.4 <1",
        "@youwol/fv-group": ">=0.1.1 <1",
        "@youwol/fv-input": ">=0.1.0 <1",
        "@youwol/fv-tabs": ">=0.1.2 <1",
        "@youwol/fv-tree": ">=0.1.4 <1",
        "@youwol/fv-context-menu": ">=0.0.3 <1",
        "uuid": "^8.3.2",
        "grapesjs": "0.18.3",
        "js-beautify": "^1.14.0",
        "lodash": "^4.17.15",
        "rxjs": "^6.5.5",
        "marked": "^3.0.7",
        "highlight.js": "^11.2.0"
    },
    "devDependencies": {
        "@types/jest": "26.0.22",
        "@types/marked": "3.0.1",
        "@types/node": "14.14.37",
        "@types/codemirror": "^5.60.5",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "codemirror": "^5.63.3",
        "js-beautify": "^1.14.0",
        "@typescript-eslint/parser": "^5.13.0",
        "css-loader": "5.2.0",
        "del-cli": "3.0.1",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.6.0",
        "eslint-plugin-tsdoc": "^0.2.16",
        "eslint-plugin-unused-imports": "^2.0.0",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "5.2.0",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "jest-junit": "^14.0.0",
        "prettier": "^2.5.1",
        "prettier-plugin-properties": "^0.1.0",
        "mini-css-extract-plugin": "1.3.9",
        "source-map-loader": "2.0.1",
        "ts-jest": "^28.0.7",
        "ts-lib": "^0.0.5",
        "ts-loader": "^9.3.1",
        "typedoc": "^0.23.8",
        "typescript": "^4.7.4",
        "webpack": "^5.65.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.7.1"
    },
    "youwol": {
        "type": "application"
    },
    "publishConfig": {
        "@youwol:registry": "https://gitlab.com/api/v4/projects/15166395/packages/npm/"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "rangeStart": 0,
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "endOfLine": "lf",
        "embeddedLanguageFormatting": "auto",
        "keySeparator": "="
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "/dist/",
            "/coverage/"
        ],
        "env": {
            "browser": true,
            "es2020": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:eslint-comments/recommended",
            "plugin:import/recommended",
            "prettier"
        ],
        "rules": {
            "eslint-comments/require-description": [
                "error"
            ],
            "eslint-comments/no-unused-disable": [
                "error"
            ],
            "curly": [
                "error"
            ],
            "no-irregular-whitespace": [
                "error",
                {
                    "skipComments": true,
                    "skipTemplates": true
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "webpack.config.js",
                    "jest.config.js"
                ],
                "env": {
                    "node": true
                }
            },
            {
                "files": [
                    "*.ts"
                ],
                "extends": [
                    "plugin:@typescript-eslint/recommended",
                    "plugin:import/typescript"
                ],
                "parser": "@typescript-eslint/parser",
                "parserOptions": {
                    "tsconfigRootDir": "./",
                    "project": [
                        "./tsconfig.json"
                    ]
                },
                "plugins": [
                    "unused-imports",
                    "@typescript-eslint"
                ],
                "rules": {
                    "@typescript-eslint/no-namespace": "off",
                    "@typescript-eslint/no-unused-vars": "off",
                    "unused-imports/no-unused-imports": "error",
                    "unused-imports/no-unused-vars": [
                        "warn",
                        {
                            "vars": "all",
                            "varsIgnorePattern": "^_",
                            "args": "after-used",
                            "argsIgnorePattern": "^_"
                        }
                    ],
                    "@typescript-eslint/no-unnecessary-type-assertion": "error"
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "extends": [
                    "plugin:jest/recommended",
                    "plugin:jest/style"
                ],
                "plugins": [
                    "jest"
                ],
                "rules": {
                    "jest/expect-expect": [
                        "error",
                        {
                            "assertFunctionNames": [
                                "expect",
                                "verify"
                            ]
                        }
                    ]
                }
            }
        ],
        "noInlineConfig": false,
        "reportUnusedDisableDirectives": true
    }
}
